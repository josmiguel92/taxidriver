<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<link rel="apple-touch-icon" sizes="76x76" href="{{ asset("/img/apple-icon.png") }}">
	<link rel="icon" type="image/png" sizes="96x96" href="{{ asset("/img/favicon.png") }}">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>{% if pagetitle is defined %}{ pagetitle }}{% endif %} TaxiDriver's Admin</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    {% block stylesheets %}
    <!-- Bootstrap core CSS     -->
    <link href="{{ asset("/css/bootstrap.min.css") }}" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="{{ asset("/css/animate.min.css") }}" rel="stylesheet"/>

    <!--  Paper Dashboard core CSS    -->
    <link href="{{ asset("/css/paper-dashboard.css") }}" rel="stylesheet"/>
    <link href="{{ asset("/css/paper-dashboard-custom.css") }}" rel="stylesheet"/>


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="{{ asset("/css/demo.css") }}" rel="stylesheet" />


    <!--  Fonts and icons     -->
    <link href="{{ asset("/css/muli-font.css") }}" rel='stylesheet' type='text/css'>
    <link href="{{ asset("/css/themify-icons.css") }}" rel="stylesheet">
    <link href="{{ asset("/css/font-awesome.css") }}" rel="stylesheet">
    {% endblock stylesheets %}
</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-background-color="black" data-active-color="warning">

    <!--
		Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
		Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
	-->

    	<div class="sidebar-wrapper">
            <div class="logo">

                <a href="{{ path('dash') }}" class="simple-text">
                    <img src="{{ asset("img/new_logo.png") }}">TaxiDriver Cuba
                </a>
            </div>

            <ul class="nav">
                <li {% if pagename == 'dash' %} class="active" {% endif %}>
                    <a href="{{ path('dash') }}">
                        <i class="ti-panel"></i>
                        <p>Resumen</p>
                    </a>
                </li>
                <li {% if pagename == 'services' %} class="active" {% endif %}>
                    <a href="{{ path('dash_services_edit') }}">
                        <i class="ti-car"></i>
                        <p>Servicios</p>
                    </a>
                </li>
                <li {% if pagename == 'booking' %} class="active" {% endif %}>
                    <a href="{{ path('dash_booking') }}">
                        <i class="ti-calendar"></i>
                        <p>Reservaciones</p>
                    </a>
                </li>
                <li {% if pagename == 'gallery' %} class="active" {% endif %}>
                    <a href="{{ path('dash_gallery') }}">
                        <i class="ti-gallery"></i>
                        <p>Galer&iacute;a</p>
                    </a>
                </li>
                <li {% if pagename == 'paygateway' %} class="active" {% endif %}>
                    <a href="{{ path('dash_paygateway') }}">
                        <i class="ti-credit-card"></i>
                        <p>Pasarela de Pagos</p>
                    </a>
                </li>
                <li {% if pagename == 'sitecontent' %} class="active" {% endif %}>
                    <a href="{{ path('dash_sitecontent_edit') }}">
                        <i class="ti-pin-alt"></i>
                        <p>Contenido de Home</p>
                    </a>
                </li>
                <li {% if pagename == 'socialnet' %} class="active" {% endif %}>
                    <a href="{{ path('dash_socialnet_edit') }}">
                        <i class="ti-themify-favicon-alt"></i>
                        <p>Redes Sociales</p>
                    </a>
                </li>
                <li {% if pagename == 'config' %} class="active" {% endif %}>
                    <a href="#l">
                        <i class="ti-settings"></i>
                        <p>Configuraci&oacute;n</p>
                    </a>
                </li>


            </ul>
    	</div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle">
                        <span class="sr-only">Mostrar navegaci&oacute;n</span>
                        <span class="icon-bar bar1"></span>
                        <span class="icon-bar bar2"></span>
                        <span class="icon-bar bar3"></span>
                    </button>
                    <a class="navbar-brand" href="#">{% block pagetitle %}Panel de Control{% endblock pagetitle %}</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="ti-bell"></i>
                                    <p class="notification">4</p>
									<p>Notificaciones</p>
									<b class="caret"></b>
                              </a>
                              <ul class="dropdown-menu">
                                <li><a href="#">Notification 1</a></li>
                                <li><a href="#">Notification 2</a></li>
                                <li><a href="#">Notification 3</a></li>
                                <li><a href="#">Another notification</a></li>
                              </ul>
                        </li>
                        <li>
                            <a href="{{ path("logout") }}">
                                <i class="ti-power-off"></i>
                                <p>Salir</p>
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                {% block content %}

                {% endblock content %}
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>

                        <li>
                            <a href="http://www.taxidrivercuba.com">
                                TaxiDriver Cuba
                            </a>
                        </li>

                        <li>
                            <a href="#">
                                Otros enlaces
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="copyright pull-right">
                    &copy; <script>document.write(new Date().getFullYear())</script>, made with <i class="ti-heart"></i> by <a href="http://habana.tech">Habana.Tech</a>
                </div>
            </div>
        </footer>

    </div>
</div>


</body>
    {% block javascripts %}
    <!--   Core JS Files   -->
    <script src="{{ asset("/js/jquery-1.10.2.js")}}" type="text/javascript"></script>
	<script src="{{ asset("/js/bootstrap.min.js")}}" type="text/javascript"></script>

	<!--  Checkbox, Radio & Switch Plugins -->
	<script src="{{ asset("/js/bootstrap-checkbox-radio.js")}}"></script>

	<!--  Charts Plugin -->
	<script src="{{ asset("/js/chartist.min.js")}}"></script>

    <!--  Notifications Plugin    -->
    <script src="{{ asset("/js/bootstrap-notify.js")}}"></script>

    <!--  Google Maps Plugin    -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

    <!-- Paper Dashboard Core javascript and methods for Demo purpose -->
	<script src="{{ asset("/js/paper-dashboard.js")}}"></script>

	<!-- Paper Dashboard DEMO methods, don't include it in your project! -->
	<script src="{{ asset("/js/demo.js")}}"></script>

        <script>
            $('document').ready(function(){

                {% for flash_message in app.session.flashbag.get('notice') %}
                    {% set thisflash = utils.formatFlashBagNotification(flash_message) %}
                $.notify({
                    icon: '{{ thisflash[2] }}',
                    message: "{{ thisflash[0] }}"

                },{
                    type: '{{ thisflash[1] }}',
                    timer: 4000
                });
                {% endfor %}
            });
        </script>


    {% endblock javascripts %}


</html>
