{% extends 'AppBundle:Dash/booking:base.html.twig' %}
{% set pagename = 'booking'  %}
{% block content %}
    <h1>Agregar Reservaci&oacute;n</h1>
    <p style="float: right">{{ form.vars.value.bookingTime | date('d/m/Y h:i') }}</p>
    <br>
    <hr>


    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            <h2>
                Datos generales
            </h2>
            <div class="col-md-12 card">
                {{ form_row(form.serviceType) }}
                {{ form_row(form.pickuptime) }}
                {{ form_row(form.airport) }}
                {{ form_row(form.details) }}
                {{ form_row(form.airportName) }}
                {{ form_row(form.flynumber) }}
            </div>
            <div class="col-md-12 card">
                {{ form_row(form.targetPlace) }}
                {{ form_row(form.returnpickup) }}
                {{ form_row(form.returnpickuptime) }}
                {{ form_row(form.returnpickupplacce) }}
                {{ form_row(form.timelinetravel) }}
            </div>
        </div>

        <div class="col-md-6">
            <h2>
                Datos del cliente
            </h2>
            <div class="col-md-12 card">
                {{ form_row(form.fullname) }}
                {{ form_row(form.email) }}
                {{ form_row(form.telephone) }}
                {{ form_row(form.bookingLanguage) }}
                {{ form_row(form.numpeople) }}
                {{ form_row(form.children) }}
                {{ form_row(form.comment) }}
            </div>
        </div>

        <div class="col-md-6">
            <h2>
                Sobre la Experiencia
            </h2>
            <div class="col-md-12 card">
                {{ form_row(form.experience) }}
                {{ form_row(form.experienceTaxi) }}
                {{ form_row(form.experienceTime) }}
            </div>
        </div>

        <div class="col-md-6">
            <h2>
                Gesti√≥n Interna
            </h2>
            <div class="col-md-12 card">
                {{ form_row(form.bookingSource) }}
                <div class="row">
                    <div class="col-md-8">
                        {{ form_row(form.price) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.currency) }}
                    </div>
                </div>

                {{ form_row(form.payed) }}
                {{ form_row(form.payedDate) }}
                {{ form_row(form.paymentDetails) }}
                {#{ form_row(form.drivermsg) }#}
                {{ form_row(form.drivername) }}
                <hr>
                {{ form_row(form.accepted) }}
                {{ form_row(form.confirmed) }}

            </div>
        </div>
    </div>
        {{ form_widget(form) }}

        <input type="submit" value="Guardar" class="btn btn-primary"/>
    {{ form_end(form) }}
<hr><a href="{{ path('dash_bookings_index') }}" class="btn">Regresar a la lista</a>

{% endblock %}
