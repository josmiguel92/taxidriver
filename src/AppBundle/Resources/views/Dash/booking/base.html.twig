<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<link rel="apple-touch-icon" sizes="76x76" href="{{ asset("/images/apple-icon.png") }}">
	<link rel="icon" type="image/png" sizes="96x96" href="{{ asset("/images/favicon_admin.png") }}">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>{% if pagetitle is defined %}{ pagetitle }}{% endif %} TaxiDriver's Admin</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    {% block stylesheets %}
    <!-- Bootstrap core CSS     -->
    <link href="{{ asset("/css/bootstrap.min.css") }}" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="{{ asset("/css/animate.min.css") }}" rel="stylesheet"/>

    <!--  Paper Dashboard core CSS    -->
    <link href="{{ asset("/css/paper-dashboard.css") }}" rel="stylesheet"/>
    <link href="{{ asset("/css/paper-dashboard-custom.css") }}" rel="stylesheet"/>


    <!--  Fonts and icons     -->
    <link href="{{ asset("/css/muli-font.css") }}" rel='stylesheet' type='text/css'>
    <link href="{{ asset("/css/themify-icons.css") }}" rel="stylesheet">
    <link href="{{ asset("/css/font-awesome.css") }}" rel="stylesheet">
    {% endblock stylesheets %}
</head>
<body>

<div class="wrapper">


    <div class="main-panel-booking">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle">
                        <span class="sr-only">Mostrar navegaci&oacute;n</span>
                        <span class="icon-bar bar1"></span>
                        <span class="icon-bar bar2"></span>
                        <span class="icon-bar bar3"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('dash_booking') }}">{% block pagetitle %}Panel de Control{% endblock pagetitle %}</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {{ render(controller(
                            'AppBundle:Admin:notifications'
                        ))   }}
                        <li>
                            <a href="{{ path("logout") }}">
                                <i class="ti-power-off"></i>
                                <p>Salir</p>
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                {% block content %}

                {% endblock content %}
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>

                        <li>
                            <a href="{{ path('home')}}">
                                TaxiDriver Cuba
                            </a>
                        </li>

                        <li>
                            <a href="#">
                                Otros enlaces
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="copyright pull-right">
                    &copy; <script>document.write(new Date().getFullYear())</script>, made with <i class="ti-heart"></i> by <a href="http://habana.tech">Habana.Tech</a>
                </div>
            </div>
        </footer>

    </div>
</div>


</body>
    {% block javascripts %}
    <!--   Core JS Files   -->
    <script src="{{ asset("/js/jquery-1.10.2.js")}}"></script>

	<!--  Checkbox, Radio & Switch Plugins -->
	<script src="{{ asset("/js/bootstrap-checkbox-radio.js")}}"></script>

    <script>
       $('document').ready(function () {
           $('input[type="submit"]').click(function(){
               console.log('click')
               $('form')[0].submit();
           })
       })
    </script>
    {% endblock javascripts %}


</html>
