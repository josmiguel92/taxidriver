
<!-- Make your own Tour-->
<section class="context-dark offset-top-0 section-md-top-40">
    <!-- RD Parallax-->
    <div data-on="false" data-md-on="true" class="own-route rd-parallax">
        <div data-speed="0.25" data-type="media" data-url="{{ asset(random(content.ownRoutePathImages)) }}" class="rd-parallax-layer"></div>
        <div data-speed="0" data-type="html" data-md-fade="false" class="rd-parallax-layer">
            <div class="shell section-75 section-md-top-103 section-md-bottom-110">
                <div class="range range-xs-center">
                    <div class="cell-sm-10">
                        <div style="margin-bottom:17px;" class="veil reveal-sm-inline-block text-bottom">
                            <img src="{{ divider }}" width="135" height="2" alt="divider" style="opacity: .5;" class="img-responsive center-block"></div>
                        <div class="veil reveal-sm-inline-block">
                            <span class="fa fa-map-o fa-3x text-white"></span>
                        </div>
                        <div style="margin-bottom:17px;" class="veil reveal-sm-inline-block text-bottom">
                            <img src="{{ divider }}" width="135" height="2" alt="divider" style="opacity: .5;" class="img-responsive center-block"></div>
                        <div class="offset-top-15 offset-md-top-30">
                            <h2 class="text-spacing-0">
                                {{ content.getServicesmakeroutetextLocale }}
                            </h2>
                            <div class="offset-top-30 offset-md-top-60">
                                <a href="#contact" style="min-width:240px;" class="btn btn-calypso">
                                    <i class="fa fa-heart"></i>
                                    {% trans %}Make your own way!{% endtrans %}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="margin: 2em 10% 0 10%">
        <p class="text-spacing-25 text-gray-dark">
            {{ content.owntaxidescriptionLocale() | nl2br}}
        </p>
    </div>
</section>

<!-- Other Services-->
<section class="section-75 section-md-top-103 section-md-bottom-40">
    <div class="shell">
        <h2 class="text-spacing-inverse-25">
            {% trans %}Other services{% endtrans %}
        </h2>

        <div class="range range-xs-center list-index-lg offset-md-top-15">

            {% for infography in infographys %}
                {% if infography.isservices %}
                    <div class="cell-sm-10 cell-md-3">
                        <div class="inset-lg-left-30 inset-lg-right-10">
                            <div class="h2 text-spacing-inverse-50 color-sky">
                                {% if 'horse' in infography.getIcon %}
                                    <a href="https://www.horseridinginvinales.com/"  target="_blank">
                                        <img class="lazy" alt="{{ infography.getTitleLocale }}" data-src="{{ asset("images/custom-icons/horse.svg") }}" style="margin: auto; height: 2em;">
                                    </a>
                                {% elseif  'diving' in infography.getIcon %}
                                    <img class="lazy" alt="{{ infography.getTitleLocale }}" data-src="{{ asset("images/custom-icons/diving.svg") }}" style="margin: auto; height: 2em;">
                                {% elseif  'food' in infography.getIcon %}
                                    <img class="lazy" alt="{{ infography.getTitleLocale }}" data-src="{{ asset("images/custom-icons/food.svg") }}" style="margin: auto; height: 2em;">
                                {% else %}
                                    <i class="{{ infography.getIcon }} fa-2x"></i>
                                {% endif %}

                            </div>
                            <div class="offset-top-10">
                                <p class="font-accent text-spacing-50 text-bold text-uppercase text-gray-base">
                                    {% if 'horse' in infography.getIcon %}
                                        <a href="https://www.horseridinginvinales.com/"  target="_blank">
                                            {{ infography.getTitleLocale }}
                                        </a>
                                    {% else %}
                                        {{ infography.getTitleLocale }}
                                    {% endif %}
                                </p>
                            </div>
                            <div class="offset-top-20">
                                <p class="text-spacing-0">
                                    {{ infography.getTextLocale }}
                                </p>
                            </div>
                            <div class="offset-top-10">
                                <h5 class="text-spacing-20 text-silver-chalice">...</h5>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

        </div>
    </div>
</section>

