
<!-- Taxi-Transfers subsection -->
<div class="offset-top-25">
    {% set alt = locale=='en'?"Taxi sign":"se√±al de Taxi" %}
    <img alt="{{ alt }}" src="{{ asset("images/custom-icons/taxi-sign.svg") }}">
    <h2 class="text-spacing-25">
        {% trans %}Taxi{% endtrans %}
    </h2>
</div>

<div class="range range-xs-center offset-top-20">
    <div class="cell-sm-10 cell-lg-8">
        <p class="text-spacing-0">
            {{ content.getServicestaxitextLocale | raw }}
        </p>
    </div>
</div>


<!--List of Tours -->
<div class="grid3-cards">
    {% for transfer in transfers %}
    <div class="grid_item grid_card">
        <div class="grid_card_image"> <a href="{{ path("booking_place", {"_id":transfer.id, "_name": utils.slugify(transfer.getNameLocale) }) }}" class="text-mine-shaft">
                <img data-src="{{ asset(transfer.getWebPath) }}" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mP8/x8AAwMCAO+ip1sAAAAASUVORK5CYII="  alt="{{ transfer.getNameLocale }}" class="img-responsive center-block img-zoom lazy">
                <noscript>
                    <img src="{{ asset(transfer.getWebPath) }}" alt="{{ transfer.getNameLocale }}" class="img-responsive center-block">
                </noscript>
            </a>
        </div>
        <div class="grid_card_name">
            <a href="{{ path("booking_place", {"_id":transfer.id, "_name": utils.slugify(transfer.getNameLocale) }) }}" class="text-mine-shaft">
                    {{ transfer.getNameLocale }}
                </a>

        </div>
        <div class="grid_card_description">
{#            {% if transfer.basePrice > 0 %}#}
                <p style="line-height: 22px;" class="offset-top-15"> <b><i class="fa fa-dollar"></i>
                        {% trans %}Price{% endtrans %}: </b>
                    {{ transfer.basePrice | number_format(2,'.') }} USD
                </p>
          {#  {% endif %}#}
        </div>
        <div class="grid_card_btn">
            <a href="{{ path("booking_place", {"_id":transfer.id, "_name": utils.slugify(transfer.getNameLocale) }) }}" class="btn btn-calypso btn-icon btn-icon-left">
                <span class="icon icon-xs fa fa-info-circle"></span>
                {% trans %}See details{% endtrans %}
            </a>
        </div>

    </div>
    {% endfor %}
</div>

