                  console.log("No se conocen los precios")
                }




            });

            //Button of active Tour
            $("#activeTour").change(function() {
                buttonTourOn = !$('.toggle')[0].classList.contains('off');
                hideOrShowReturn();
            });

            //Button of active return
            /*
            $("#activeReturn").change(function() {
