                activeOrDeactiveReturn();
            });
            */

            $("#{{ booking_form.numpeople.vars.id }}").change(function() {
                numberPeople = $('#{{ booking_form.numpeople.vars.id }}')[0].value;
            });

        });

    </script>
{% endblock %}