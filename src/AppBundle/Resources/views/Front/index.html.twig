{% else %}
    {% set title = 'Taxi and Tours to Vinales, Varadero or any other place in Cuba' %}
{% endif %}
{% set description = content.getSiteDescriptionLocale %}

{% block hreflang %}
    <link rel="alternate" hreflang="en" href="{{ absolute_url(path("home", {"_locale":"en"})) }}" />
