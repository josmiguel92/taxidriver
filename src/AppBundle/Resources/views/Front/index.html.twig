        <!-- Swiper Gallery-->
        <div  id="home" class="swiper-container gallery-top">

            <div class="swiper-wrapper">

                {% for blogEntry in blogEntries %}

                    <div style="background-image:url( {{ asset(blogEntry.getFullImageWebPath) }} )" class="swiper-slide">
