{% extends 'AppBundle:Front:base.html.twig' %}

{% if locale=='es' %}
    {% set title = 'Taxi y Tours para Vi√±ales, Varadero o cualquier otro lugar de Cuba' %}
{% else %}
    {% set title = 'Taxi and Tours to Vinales, Varadero or any other place in Cuba' %}
{% endif %}
{% set description = content.getSiteDescriptionLocale %}

{% block hreflang %}
    <link rel="alternate" hreflang="en" href="{{ absolute_url(path("home", {"_locale":"en"})) }}" />
    <link rel="alternate" hreflang="es" href="{{ absolute_url(path("home", {"_locale":"es"})) }}" />
    <link rel="alternate" hreflang="x-default" href="{{ absolute_url(path("home", {"_locale":"en"})) }}" />
{% endblock %}


{% block structure_data %}
    {#breadcrumbs#}
    <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "{{ absolute_url(path("home")) }}",
          "name": "Home",
          "image": "{{ asset("/images/favicon.png") }}"
        }
      }]
    }
    </script>

    {#Logo and customer Service Number#}
    <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "Organization",
      "name": "TaxiDriversCuba",
      "url": "https://www.taxidriverscuba.com",
      "logo": "https://www.taxidriverscuba.com/images/logo.png",
      "contactPoint": [
        { "@type": "ContactPoint",
          "telephone": "{{ content.getContacttelephone }}",
          "contactType": "customer service",
          "availableLanguage": [
          "English",
          "Spanish"
           ]
        }
      ],
      "sameAs": [
        "http://www.facebook.com/taxidriverscuba",
        "http://instagram.com/taxidriverscuba",
        "http://plus.google.com/taxidriverscuba"
      ]
    }
    </script>

{% endblock %}

{% block header %}
    <!-- Page Header-->
    <header class="page-header">

        <!-- RD Navbar-->
        <div class="rd-navbar-wrap">
            <nav data-md-device-layout="rd-navbar-fixed" data-lg-device-layout="rd-navbar-static" data-md-stick-up-offset="120px" data-lg-stick-up-offset="120px" data-layout="rd-navbar-fixed" data-sm-layout="rd-navbar-fixed" data-md-layout="rd-navbar-fullwidth" data-lg-layout="rd-navbar-fullwidth" class="rd-navbar rd-navbar-panel">
                <div class="rd-navbar-inner">
                    <!-- RD Navbar Panel-->
                    <div class="rd-navbar-panel">
                        <!-- RD Navbar Toggle-->
                        <button data-rd-navbar-toggle=".rd-navbar-nav-wrap" class="rd-navbar-toggle"><span></span></button>
                        <!-- RD Navbar Brand-->
                        <div class="rd-navbar-brand veil reveal-md-block veil-tablet-md">
                            <a href="{{ path("home") }}" class="brand-name">
                                <img class="logo" width="auto" src="{{ logo_wide }}" alt="Logo Taxi Drivers Cuba">
                            </a>
                        </div>
                        <div class="rd-navbar-brand veil-md reveal-tablet-md-inline-block">
                            <a href="{{ path("home") }}" class="brand-name">
                                <img style="margin-top: -7px;" width="182" height="34" src="{{ logo_wide }}" alt="logo Taxi Drivers Cuba">
                            </a>
                        </div>
                        <!-- RD Navbar Toggle-->
                        <button data-rd-navbar-toggle=".rd-navbar-collapse-wrap" class="rd-navbar-collapse"><span></span></button>
                    </div>
                    <div class="rd-navbar-right-side">
                        <div class="pull-md-left veil reveal-lg-inline-block">
                            <ul class="rd-navbar-nav">
                                <li>
                                    <a class="btn-book" href="#services">
                                        <i class="fa fa-shopping-cart"></i>
                                        {% trans %}Book Now{% endtrans %}
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!--- Links --->
                        <div class="rd-navbar-nav-wrap reveal-md-inline-block">
                            <ul class="rd-navbar-nav">
                                <!-- RD Navbar Nav-->
                                <li><a href="#">{% trans %}home{% endtrans %}</a></li>
                                <li><a href="#services">{% trans %}services{% endtrans %}</a></li>
                                <li><a href="#about">{% trans %}about us{% endtrans %}</a></li>
                                <li><a href="#contact">{% trans %}contacts{% endtrans %}</a></li>
                                <li><a href="{{ path("blog") }}">blog</a></li>
                            </ul>
                        </div>

                        <div class="pull-md-right">

                            <!-- Social Network and flags --->
                            <div class="rd-navbar-collapse-wrap reveal-md-inline-block">

                                <ul class="list-inline list-inline-0 list-social">
                                    {% for socialNetwork in socialNetworks %}
                                        <li class="text-center">
                                            <a target="_blank" href="{{ socialNetwork.getProfilelink }}" class="text-white">
                                                <i class="fa fa-{{ socialNetwork.getName }}"></i>
                                            </a>
                                        </li>
                                    {% endfor %}

                                    <li class="text-center flags">
                                        <a href="{{ path("home", {"_locale":"en"}) }}">
                                            <img src="{{ asset('images/flags/uk-flags.svg') }}" alt="{% trans %}change language to english{% endtrans %}">
                                        </a>
                                    </li>
                                    <li class="text-center flags">
                                        <a href="{{ path("home", {"_locale":"es"}) }}">
                                            <img src="{{ asset('images/flags/spana-flags.svg') }}" alt="{% trans %}change languaje to spanish{% endtrans %}">
                                        </a>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </nav>
        </div>

